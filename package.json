{
  "name": "corona-status",
  "version": "0.0.1",
  "description": "Handy website to track corona status in your country",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start-client": "lerna run start --scope=@corona-status/client",
    "prettify": "prettier --write",
    "lint:staged": "eslint --fix",
    "lint": "eslint --fix packages/**/**.tsx"
  },
  "repository": "https://github.com/ameerthehacker/corona-status.git",
  "author": "ameerthehacker",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.23.0",
    "@typescript-eslint/parser": "^2.23.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.19.0",
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^1.19.1",
    "typescript": "^3.8.3"
  },
  "lint-staged": {
    "*.{js,ts,tsx,html,json,scss,css,md,yml}": [
      "yarn prettify"
    ],
    "*.{spec,js,ts,tsx}": [
      "yarn lint:staged"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
